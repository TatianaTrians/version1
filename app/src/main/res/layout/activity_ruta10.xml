                    android:textColor="#8A8585"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/coordenadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Coordenadas GPS:"
