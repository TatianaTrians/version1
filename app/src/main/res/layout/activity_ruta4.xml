<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FBF9"
    tools:context=".Ruta4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/logoTeo"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="logoConcello"
            android:scaleType="fitXY"
            android:foreground="?android:attr/selectableItemBackground"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            app:srcCompat="@drawable/logo" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="menu hamburguesa"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/hamburguesa"
            android:foreground="?android:attr/selectableItemBackground"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/logoRedeRutas"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="120dp"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="logo rede de rutas"
                android:scaleType="fitXY"
                android:foreground="?android:attr/selectableItemBackground"
                android:theme="@android:style/ThemeOverlay.Material.Dark"
                app:srcCompat="@drawable/logorutas" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/numero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif-black"
                    android:text="4"
                    android:textColor="#402D652F"
                    android:textSize="70sp" />

                <TextView
                    android:id="@+id/titulo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-15dp"
                    android:text="Ruta Apego das Muiñeiras de Luou"
                    android:textColor="#415419"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:foregroundTint="#2DFFFFFF"
                app:srcCompat="@mipmap/lineaverder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="550dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/duracion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:text="Duración"
                android:textColor="#8A8585"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/km1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="30 min"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/desnivel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Desnivel"
                android:textColor="#8A8585"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/desnivel1.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="⇑ 30m"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/circular1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Ruta Circular"
                android:textColor="#8A8585"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/circular1.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Non"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/dificultad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Dificultad"
                android:textColor="#8A8585"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/baixa1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Fácil"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/sinalizacion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Sinalización"
                android:textColor="#8A8585"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sinalizacion1.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Si"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/coordenadas1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Inicio da ruta"
                android:textColor="#8A8585"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/coordenadas1.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Coordenadas GPS: \n42.803393955393986, -8.583896633172326"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Descarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Descarga"
                android:textColor="#8A8585"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pdf1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Ollo ao piollo muiñeiras \n(dificultade alta)"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/pieza1"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="Ollo ao piollo muiñeiras (dificultade alta)"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/pieza"/>

            <TextView
                android:id="@+id/pdf2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Ollo ao piollo muiñeiras \n(dificultade baixa)"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/pieza2"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="Ollo ao piollo muiñeiras (dificultade baixa)"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/pieza"/>

        </LinearLayout>

            <ImageView
                android:id="@+id/escalador"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="445dp"
                android:layout_marginLeft="-5dp"
                android:contentDescription="escalador"
                app:tint="#1F000000"
                app:srcCompat="@mipmap/escalador" />
        </LinearLayout>

            <Button
                android:id="@+id/wikiloc"
                android:layout_width="130dp"
                android:layout_height="48dp"
                android:layout_marginLeft="220dp"
                android:backgroundTint="#F9FBF9"
                android:text="Ruta en Wikiloc"
                android:textColor="#415419"
                android:textSize="12sp"
                android:transformPivotX="@dimen/cardview_compat_inset_shadow"
                app:rippleColor="#415419"
                app:strokeColor="#415419"/>

            <ImageView
                android:id="@+id/ruta4"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_marginLeft="3dp"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ruta4" />

            <TextView
                android:id="@+id/texto1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="25dp"
                android:text="Ruta lineal que discorre dende A Chanca ata A Ínsua, en Luou, perfectamente sinalizada é considerada ruta Apego.
                \n \nO percorrido aproveita a obra levada a cabo para a colocación do colector de Espasande, conta con numerosos muíños onde tradicionalmente se facía a moenda. Podemos atopar na mesma o muíño e Pombal das Muiñeiras, o muíño do Inferniño, o muíño Novo, o muíño dos Cornidos, o muíño da Ínsua e o lavadoiro da Ínsua.
                \n \nTrátase dun pequeno percorrido de ida e volta onde ademais dos elementos patrimoniais citados tamén podemos atopar un ecosistema fluvial con bosque de río en bo estado de conservación.
                \n \nAs rutas Apego son rutas pensadas e deseñadas para familias con crianzas e que poden portar carriños e, por ende, son accesibles para persoas con mobilidade reducida tamén. Para motivar os paseos e desfrute da natureza temos deseñado un xogo, o Ollo ao Piollo, con dous niveis de dificultade (adultas e cativada) que se pode descargar a continuación e que consiste en ir atopando distintos elementos naturais á vez que paseas pola ruta."
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="70dp"
                android:foregroundTint="#2DFFFFFF"
                app:srcCompat="@mipmap/lineaverder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/facebook"
                    android:layout_width="53dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#00B8AEAE"
                    android:contentDescription="facebook"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/facebook"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:theme="@android:style/ThemeOverlay.Material.Dark"
                    app:tint="#7F000000" />

                <ImageButton
                    android:id="@+id/twitter"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#00B8AEAE"
                    android:contentDescription="twitter"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/twitter"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:theme="@android:style/ThemeOverlay.Material.Dark"
                    app:tint="#7F000000" />

                <ImageButton
                    android:id="@+id/instagram"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#00B8AEAE"
                    android:contentDescription="instagram"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/instagram"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:theme="@android:style/ThemeOverlay.Material.Dark"
                    app:tint="#7F000000" />

                <ImageButton
                    android:id="@+id/wikiloc1"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#00B8AEAE"
                    android:contentDescription="wikiloc"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/wikiloc"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:theme="@android:style/ThemeOverlay.Material.Dark"
                    app:tint="#7F000000" />

                <ImageButton
                    android:id="@+id/info"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#00B8AEAE"
                    android:contentDescription="información"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/info"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:theme="@android:style/ThemeOverlay.Material.Dark"
                    app:tint="#7F000000" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>